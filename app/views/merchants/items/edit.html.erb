<h1><center>Edit <%= @item.name %></center></h1>

<p><%= form_with url: merchant_item_path(@item.merchant, @item), method: :patch do |form| %></p>
  <p><%= form.label :name %></p>
  <p><%= form.text_field :name, value: "#{@item.name}" %></p>
  <p><%= form.label :description %></p>
  <p><%= form.text_field :description, value: "#{@item.description}" %></p>
  <p><%= form.label :unit_price %></p>
  <p><%= form.number_field :unit_price, value: "#{@item.unit_price}" %></p>
  <p><%= form.submit "Update Item" %></p>
<% end %>