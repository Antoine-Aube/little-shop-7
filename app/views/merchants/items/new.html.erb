<h1><center>Create new Item for <%= @merchant.name %></center></h1>

<center><%= form_with url: merchant_items_path(@merchant), method: :post, local: true, data: {turbo: false} do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>
  <%= form.label :description %>
  <%= form.text_field :description %><br>
  <%= form.label :unit_price %>
  <%= form.text_field :unit_price %><br>
  <%= form.submit "Create New Item" %>
<% end %></center>