<h1>Little Esty Shop</h1>

<h3>Admin Dashboard</h3>

<section class="links">
<p><%= link_to "Merchants", admin_merchants_path %></p>
<p><%= link_to "Invoices", admin_invoices_path %></p>
</section>


<section class="top_customers">
<h3> Top Customers</h3>

<% @customers.top_customer.each do |customer| %>
  <p><%= customer.first_name %> <%= customer.last_name %> - <%= customer.transaction_count %> Purchases</p>
<% end %>
</section>

<section class="incomplete_invoices">
<h3> Incomplete Invoices</h3>

<% @invoices.incomplete_invoices.each do |invoice| %>
  <p>Invoice #<%= link_to "#{invoice.id}", admin_invoice_path(invoice.id) %> - <%= invoice.created_at.strftime("%A, %B %d, %Y")%></p> 
<% end %>
</section>