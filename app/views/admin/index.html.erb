
<center><h1>Little Esty Shop</h1></center>
<%= render partial: "page_head" %>

<div class="table-container">
  <table class="top_customers table-style">
    <caption><h3> Top Customers</h3></caption>
      <thead>
        <tr>
          <th> # </th>
          <th> Customer Name </th>
          <th> Number of Purchases </th>
        </tr>
      </thead>
      <tbody>
        <% index = 0 %>
        <% @customers.top_customer.each do |customer| %>
          <tr>
              <td><%= index += 1 %>.</td>
              <td><%= customer.first_name %> <%= customer.last_name %></td>
              <td><center><%= customer.transaction_count %> Purchases</center></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <table class="incomplete_invoices table-style">
  <thead>
  <caption><h3> Incomplete Invoices</h3></caption>
      <tr>
        <th> Invoice Number </th>
        <th> Date of Creation </th>
      </tr>
    </thead>
    <tbody>
      <% @invoices.incomplete_invoices.each do |invoice| %>
        <tr id="incomplete_invoices=<% invoice.id %>">
          <td>Invoice #<%= link_to "#{invoice.id}", admin_invoice_path(invoice.id) %></td>
          <td><%= invoice.created_at.strftime("%A, %B %d, %Y")%></td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
